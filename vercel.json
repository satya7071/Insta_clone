{
  "version": 2,
  "builds": [
    { "src": "manage.py", "use": "@vercel/python" }
  ],
  "env": {
    "MYSQL_UNIX_PORT": "/tmp/mysql.sock"
  },
  "functions": {
    "api/**/*.py": {
      "runtime": "@vercel/python"
    }
  },
  "routes": [
    {
      "src": "/(.*)",
      "dest": "manage.py"
    }
  ],
  "install": {
    "include": [
      "requirements.txt"
    ],
    "ignore": [
      ".vercel/**"
    ],
    "config": {
      "python": "3.9.x"
    },
    "command": "pip install -r requirements.txt && apt-get install -y default-libmysqlclient-dev"
  }
}
